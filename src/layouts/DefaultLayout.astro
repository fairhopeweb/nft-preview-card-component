---
const {title} = Astro.props
let subtitle = 'NFT Preview Card Component'
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="favicon-32x32.png">

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- global css -->
    <link rel="stylesheet" href={Astro.resolve('../styles/globals.scss')} />

    <!-- open graph -->
    <meta property="og:title" content="NFT Preview Card Component">
    <meta property="og:description" content="Frontend Mentor challenge NFT Preview Card Component using CSS Flexbox and Grid, Accessibility best practices and CSS Animations. ">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://markteekman.github.io/nft-preview-card-component/">
    <meta property="og:image" content="assets/social-preview-image.png">

    <!-- page title -->
    <title>{title} - {subtitle}</title>
  </head>
  <body>

    <!-- main -->
    <main id="main-content">

      <slot />

    </main>

    <!-- footer -->
    <footer>
      <div class="attribution">
        Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank">Frontend Mentor</a>. 
        Coded by <a href="https://markteekman.nl">Mark Teekman</a>.
      </div>
    </footer>

  </body>
</html>

<style lang="scss">
  html,
  body {
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
    background-color: var(--background);
    
    main {
      display: grid;
      place-items: center;
      flex: 1 0 auto;
    }

    footer {
      display: flex;
      justify-content: center;
      width: 100%;
      flex-shrink: 0;
      margin-bottom: 1rem;

      .attribution { 
        font-size: 0.85rem; 
        text-align: center; 
      }
    }
  }
</style>
